<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/toggleB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="22dp"
        android:text="Edit" />

    <TextView
        android:id="@+id/firstL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="First" />

    <TextView
        android:id="@+id/lastL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/firstL"
        android:layout_below="@+id/firstL"
        android:layout_marginTop="50dp"
        android:text="Last" />

    <TextView
        android:id="@+id/emailL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lastTF"
        android:layout_below="@+id/lastTF"
        android:layout_marginTop="5dp"
        android:text="Email Address" />

    <TextView
        android:id="@+id/schoolL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/emailTF"
        android:layout_below="@+id/emailTF"
        android:layout_marginTop="5sp"
        android:text="Counselor ID Number" />

    <EditText
        android:id="@+id/firstTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lastL"
        android:layout_below="@+id/firstL"
        android:ems="10"
        android:inputType="none|textPersonName"
        android:hint="John"/>

    <EditText
        android:id="@+id/lastTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lastL"
        android:layout_below="@+id/lastL"
        android:ems="10"
        android:inputType="none|textPersonName"
        android:hint="Doe"/>

    <EditText
        android:id="@+id/emailTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/emailL"
        android:layout_below="@+id/emailL"
        android:width="300sp"
        android:ems="10"
        android:inputType="none|textEmailAddress"
        android:hint="example@gmail.com"/>

    <EditText
        android:id="@+id/schoolTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/schoolL"
        android:layout_below="@+id/schoolL"
        android:width="300sp"
        android:ems="10"
        android:hint="004"
        android:inputType="none|textPersonName" />

</RelativeLayout>